  <body>
    <div class="container">
        <h3>Create new account</h3><br>
        {{#if message}}
          <div class="alert alert-{{message.[0]}} alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          {{message.[1]}}
          </div>
        {{/if}}

        <form class="entry-form" role="form" action="/createAccount" method="post">
            <div class="form-group">
              <input type="text" class="form-control" name="username" autocapitalize="off" autocorrect="off" placeholder="Your New Username"/>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="userPassword" placeholder="Your Password" />
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password"/>
            </div>
            <div class="form-group">
              <input type="checkbox" name="terms" value="check"> I agree to the  <a href="#" id="terms" data-container="body" data-toggle="popover" data-placement="top" data-content="We keep all of your secrets.">terms and services</a>.
            </div>

            <input type="submit" class="btn btn-primary" value="Sign Up!"/>
            <br><a href="/login">Already have an account?</a>

        </form>
    </div>

