    <body class="tmpfix">
      <div class="container">
        <form class="entry-form" role="form" action="/save/new" method="post">
        <div class="new-topbar text-center">
          <a class="btn btn-default pull-left" href="/home">Cancel</a>
          <span class="new-topbar-text">New Entry</span>
          <input type="submit" id="entrySubmitBtn" class="btn btn-primary pull-right" value="Save">
        </div>

        <div class="input-group input-group-sm">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-tag"></span>
          </span>
          <input type="text" class="form-control" id="addtag-text" placeholder="Add tags"/>
          <span class="input-group-btn">
            <button class="btn btn-primary btn-sm" id="addtag">Add</button>
          </span>
        </div>

        <div class="tags">
        </div>
        <input type="hidden" id="hiddenTags" name="hiddenTags" value="">

        <select name="emotion" class="form-control input-sm" placeholder="Select your emotion">
          <option value="default">How are you feeling?</option>
          <option value="happy">Happy</option>
          <option value="sad">Sad</option>
          <option value="excited">Excited</option>
          <option value="angry">Angry</option>
          <option value="loved">Loved</option>
          <option value="meh">Meh</option>
          <option value="peaceful">Peaceful</option>
          <option value="down">Down</option>
          <option value="proud">Proud</option>
          <option value="stressed">Stressed</option>
        </select>
          
          <div id="textEntryWrapper">
          <textarea class="form-control" rows="19" id="entryText" placeholder="How was your day?" name="entryText"></textarea>
          </div>
          </form>
      </div>

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/typeahead.bundle.js"></script>
    <script src="/js/edit.js"></script>
    <script src="/js/global.js"></script>
  </body>
