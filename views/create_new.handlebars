      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->        
    </head>

    <body class="tmpfix">
      <div class="container">
        <form class="entry-form" role="form" action="/save/new" method="post">
        <div class="new-topbar text-center">
          <a class="btn btn-default pull-left" href="/home">Cancel</a>

          <input type="submit" id="entrySubmitBtn" class="btn btn-primary pull-right" data-toggle="modal" data-target="#emptyEntryError" value="Save"/>
          <div class="modal fade" id="emptyEntryError" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title" id="myModalLabel">Oops!</h4>
                </div>
                <div class="modal-body">
                  You haven't entered anything yet!
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <br>

        {{#if B}}
         <div class="input-group input-group-sm">
          <span class="input-group-addon">
            <span class="fa fa-smile-o newEntrySmiley"></span>
          </span>
          <div id="emotionDropBox" class="dropdown-toggle" data-toggle="dropdown" >
            <span id="emotionDrop">Feeling</span>
            <span class="pull-right"><b class="caret"></b></span>
          </div>
            <ul class="dropdown-menu emotionDropOptions">
              <li class="emotions" id="happy"><img class="emoji" src="emotions/smiley.png"/>  Happy</li>
              <li class="emotions" id="sad"><img class="emoji" src="emotions/sad.png"/>  Sad</li>
              <li class="emotions" id="excited"><img class="emoji" src="emotions/happy.png"/>  Excited</li>
              <li class="emotions" id="angry"><img class="emoji" src="emotions/angry.png"/>  Angry</li>
              <li class="emotions" id="loved"><img class="emoji" src="emotions/wink.png"/>  Loved</li>
              <li class="emotions" id="stressed"><img class="emoji" src="emotions/wondering.png"/>  Stressed</li>
              <li class="emotions" id="proud"><img class="emoji" src="emotions/grin.png"/>  Proud</li>
              <li class="emotions" id="down"><img class="emoji" src="emotions/neutral.png"/>  Down</li>
              <li class="emotions" id="relaxed"><img class="emoji" src="emotions/cool.png"/>  Relaxed</li>
              <li class="emotions" id="meh"><img class="emoji" src="emotions/confused.png"/>  Meh</li>
            </ul>

            <input type="hidden" id="emotionField" name="emotion" value="default">
        </div>
        {{else}}
          {{#if C}}
            <p id="imfeeling">I'm feeling...</p>
              <table class="emotionSelect">
                <tbody>
                <tr>
                  <td class="emotionsT" id="happy"><img class="emoji" src="emotions/smiley.png"/> Happy</td>
                  <td class="emotionsT" id="sad"><img class="emoji" src="emotions/sad.png"/> Sad</td>
                  <td class="emotionsT" id="excited"><img class="emoji" src="emotions/happy.png"/> Excited</td>
                  <td class="emotionsT" id="angry"><img class="emoji" src="emotions/angry.png"/> Angry</td>
                </tr>
                <tr><td class="tableSpace"></td></tr>
                <tr>
                  <td class="emotionsT" id="loved"><img class="emoji" src="emotions/wink.png"/> Loved</td>
                  <td class="emotionsT" id="stressed"><img class="emoji" src="emotions/wondering.png"/> Stress</td>
                  <td class="emotionsT" id="proud"><img class="emoji" src="emotions/grin.png"/> Proud</td>
                  <td class="emotionsT" id="down"><img class="emoji" src="emotions/neutral.png"/> Down</td>
                </tr>
                </tbody>
              </table> <input type="hidden" id="emotionField" name="emotion" value="default">
            {{else}}
              <select name="emotion" class="form-control input-sm" placeholder="Select your emotion">
                <option value="default">How are you feeling?</option>
                <option value="happy">Happy</option>
                <option value="sad">Sad</option>
                <option value="excited">Excited</option>
                <option value="angry">Angry</option>
                <option value="loved">Loved</option>
                <option value="meh">Meh</option>
                <option value="peaceful">Peaceful</option>
                <option value="down">Down</option>
                <option value="proud">Proud</option>
                <option value="stressed">Stressed</option>
              </select>
            {{/if}}
        {{/if}}

        <div class="input-group input-group-sm tagSelect">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-tag"></span>
          </span>
          <input type="text" class="form-control" id="addtag-text" placeholder="Add tags"/>
          <span class="input-group-btn">
            <button class="btn btn-primary btn-sm" id="addtag">Add</button>
          </span>
        </div>

        <div class="tags"></div>
        <input type="hidden" id="hiddenTags" name="hiddenTags" value="">
        <p class="text-left createDate">{{dateFormat date format="MM/DD/YY"}}</p>
        <div id="textEntryWrapper">
          <textarea class="form-control" rows="19" id="entryText" placeholder="How was your day?" name="entryText"></textarea>
        </div>
      </form>
    </div>

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/edit.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/typeahead.bundle.js"></script>
    <script src="/js/global.js"></script>
    <script src="/js/create_new.js"></script>
  </body>
  </html>
