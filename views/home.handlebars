<!doctype html>

<html>
<head>
  <title>Home</title>    
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
  <link href="/css/global.css" rel="stylesheet">
  <!-- this is a comment in HTML -->

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->        
    </head>

    <body>
      <div class="container padding-top">
        {{> toolbar}}
        {{> sortbar}}
          <h3>All entries</h3>
       

        {{#each entries}}
        <div class="row">
          <div class="col-sm-6">
            <a href="entry/{{datetime}}" class="thumbnail">
              <p class="dateAndTime">{{dateFormat datetime format="MM/DD/YY HH:mm"}}</p>
              <div class="tags">
              {{#each tags}}
              <span class="label label-default tag-link">{{.}}</span>
              {{/each}}
              </div>
              <div class="emotion">
              <p>I'm feeling <em>{{emotion}}</em></p>
              </div>
              <p>{{text}}</p>
            </a>
          </div>
        </div>
        {{/each}}
        
      </div>

      <script src="https://code.jquery.com/jquery.js"></script>
      <script src="/js/jquery.dotdotdot.min.js"></script>
      <script src="/js/bootstrap.min.js"></script>
      <script src="/js/global.js"></script>
      <script src="/js/previews.js"></script>
      <script src="/js/moment.min.js"></script>

    </body>
    </html>
