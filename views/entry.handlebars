    <body>
      {{> toolbar}}
      {{> editbar}}
      <div class="container padding-top">
        <div class="row">
          <div class="col-sm-6">
              <p class ="dateAndTime">{{dateFormat entry.datetime format="MM/DD/YY HH:mm"}}</p>
              <div class="tags">
              {{#each entry.tags}}
              <span class="label label-default tag-link">{{.}}</span>
              {{/each}}
              </div>
              <div class="emotion">
              <p>I'm feeling <em>{{entry.emotion}}</em></p>
              </div>
              <p>{{entry.text}}
          </div>
        </div>
      </div>

      <script src="https://code.jquery.com/jquery.js"></script>
      <script src="/js/bootstrap.min.js"></script>
      <script src="/js/global.js"></script>

    </body>
